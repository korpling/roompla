{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'roompla'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=roompla",
                    "--package=roompla"
                ],
                "filter": {
                    "name": "roompla",
                    "kind": "bin"
                }
            },
            "args": ["run"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'roompla'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=roompla",
                    "--package=roompla"
                ],
                "filter": {
                    "name": "roompla",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Attach to Firefox",
            "type": "firefox",
            "request": "attach",
            "url": "http://localhost:1234/",
            "pathMappings": [
                {
                    "url": "http://localhost:1234/src/runtime.ts",
                    "path": "${workspaceFolder}/webapp/src/runtime.ts"
                },
                {
                    "url": "http://localhost:1234/src/apis",
                    "path": "${workspaceFolder}/webapp/src/apis"
                },
                {
                    "url": "http://localhost:1234/src/App.vue",
                    "path": "${workspaceFolder}/webapp/src/App.vue"
                }
            ]
        }
    ]
}